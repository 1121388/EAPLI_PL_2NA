<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.0" xmlns="http://java.sun.com/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd">
  <persistence-unit name="expensemanagerPU" transaction-type="RESOURCE_LOCAL">
    <provider>org.eclipse.persistence.jpa.PersistenceProvider</provider>
    <class>Model.ExpenseType</class>
    <class>Model.ChekingAccount</class>
    <class>Model.Expense</class>
    <class>Model.GeographicZone</class>
    <class>Model.Income</class>
    <class>Model.IncomeType</class>
    <class>Model.Limit</class>
    <class>Model.LimitType</class>
    <class>Model.MeansOfPayment</class>
    <class>Model.Movements</class>
    <class>Model.PaymentType</class>
    <class>Model.SavingGoal</class>
    <class>Model.Card</class>
    <class>Model.Cash</class>
    <class>Model.Cheque</class>
    <class>Model.Paypal</class>
    <properties>
      <property name="javax.persistence.jdbc.url" value="jdbc:h2:tcp://localhost//data//expensemanager2NA"/>
      <property name="javax.persistence.jdbc.password" value=""/>
      <property name="javax.persistence.jdbc.driver" value="org.h2.Driver"/>
      <property name="javax.persistence.jdbc.user" value="sa"/>
      <property name="eclipselink.ddl-generation" value="create-tables"/>
    </properties>
  </persistence-unit>
</persistence>
